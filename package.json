{
  "name": "meme-harvester",
  "version": "1.0.0",
  "type": "module",
  "main": "index.js",
  "bin": {
    "harvest": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "tsc --noEmit",
    "package": "npm run build && pkg .",
    "build:bundles": "node scripts/build-bundles.js",
    "build:bundles:clean": "rm -rf build/"
  },
  "pkg": {
    "targets": [
      "node18-macos-arm64",
      "node18-macos-x64",
      "node18-linux-x64",
      "node18-win-x64"
    ],
    "outputPath": "dist-pkg",
    "assets": [
      "node_modules/sharp/**/*.node",
      "node_modules/@img/**/*.node"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "commander": "^14.0.2",
    "execa": "^9.6.1",
    "sharp": "^0.34.5",
    "sharp-phash": "^2.2.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.8",
    "archiver": "^7.0.1",
    "pkg": "^5.8.1",
    "tar": "^7.5.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  }
}
